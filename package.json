{
  "name": "htfs-vscode",
  "displayName": "HTFS VSCode Integration",
  "description": "VS Code extension to interact with HTFS for hierarchical file tagging.",
  "version": "0.1.1",
  "publisher": "NGCIndia",
  "engines": {
    "vscode": "^1.70.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brteja1/HTFS-vscode.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "HTFS",
      "properties": {
        "tagfs.path": {
          "type": "string",
          "default": "",
          "description": "Full path to the `tagfs` executable. Example: /usr/local/bin/tagfs"
        }
      }
    },
    "commands": [
      {
        "command": "tagfs.init",
        "title": "Initialize",
        "category": "HTFS"
      },
      {
        "command": "tagfs.listtags",
        "title": "Show All Tags",
        "category": "HTFS"
      },
      {
        "command": "tagfs.addtag",
        "title": "Add New Tag",
        "category": "HTFS"
      },
      {
        "command": "tagfs.editfiletags",
        "title": "Add/Remove Tags to File",
        "category": "HTFS"
      },
      {
        "command": "tagfs.searchbytag",
        "title": "Search for Files with Tags",
        "category": "HTFS"
      },
      {
        "command": "tagfs.linktags",
        "title": "Link Tags",
        "category": "HTFS"
      },
      {
        "command": "tagfs.showfiletags",
        "title": "Show Tags for File",
        "category": "HTFS"
      },
      {
        "command": "tagfs.setPath",
        "title": "Set tagfs path",
        "category": "HTFS"
      }
    ]
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "vscode:package": "vsce package -o htfs.vsix",
    "vscode:package:dev": "vsce package --pre-release -o htfs.vsix",
    "vscode:publish": "vsce publish",
    "vscode:publish:dev": "vsce publish --pre-release"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.4.2"
  },
  "dependencies": {
    "vsce": "^1.97.0"
  }
}
